<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon.ico">

    <title>Elite Admin Template - The Ultimate Multipurpose admin template</title>


    <!-- Bootstrap popper Core JavaScript -->
    <link href="~/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/assets/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/assets/popper/popper.min.js"></script>
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>


    <!-- Bootstrap popper Core JavaScript -->
    <!-- End Bootstrap popper Core JavaScript -->
    <!--MorisJS-->
    <link href="~/assets/morrisjs/morris.css" rel="stylesheet">
    <script src="~/assets/raphael/raphael-min.js"></script>
    <script src="~/assets/morrisjs/morris.min.js"></script>
    <script src="~/assets/jquery-sparkline/jquery.sparkline.min.js"></script>
    <!--End MorisJS-->
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/js/perfect-scrollbar.jquery.min.js"></script>

    <!--Wave Effects -->
    <script src="~/js/waves.js"></script>

    <!--Menu sidebar -->
    <script src="~/js/sidebarmenu.js"></script>

    <!--Sky Icons JavaScript -->
    <script src="~/assets/skycons/skycons.js"></script>

    <!--stickey kit -->
    <script src="~/assets/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/assets/sparkline/jquery.sparkline.min.js"></script>

    <!--Custom JavaScript -->
    <link href="~/css/style.min.css" rel="stylesheet">
    <script src="~/js/custom.js"></script>



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-purple-dark fixed-layout">
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">Elite admin</p>
        </div>
    </div>

    <div id="main-wrapper">
        @await Html.PartialAsync("_Admin_TopBar", null)
        @await Html.PartialAsync("_Admin_Left_Sidebar", null)
        <div class="page-wrapper">
            <div class="container-fluid">
                @await Html.PartialAsync("_Admin_Page_Titles", null)
                <div id="view-page">
                    @RenderBody()
                </div>
                @await Html.PartialAsync("_Admin_Right_Sidebar", null)
            </div>
        </div>

        @await Html.PartialAsync("_Admin_Footer", null)
    </div>

    <script type="text/javascript">

        showPage = form => {
            try {
                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        console.log(res);
                        $('#view-page').html(res.html);
                        $.notify('deleted Successfully', { globalPosition: 'top center', className: 'danger' })
                    },
                    error: function (err) {
                        console.log(err)
                    }
                })
            } catch (ex) {
                console.log(ex)
            }
            return false;
        }
        
    </script>

</body>
</html>
