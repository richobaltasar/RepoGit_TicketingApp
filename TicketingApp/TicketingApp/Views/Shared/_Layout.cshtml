    <![endif]-->
</head>
<body class="skin-purple-dark fixed-layout">
    <div class="preloader">
        <div class="loader">
            <div class="card">
                <div class="card-body" style="text-align:center;">
                    <img src="~/images/Animation/chair.gif" width="200" style="margin-left:-100px;"/>
                    <p class="loader__label" style="margin-top:-20px;">Ewats Loading...</p>
                </div>
            </div>
            
        </div>
    </div>
    <div id="main-wrapper">
       @{
           GlobalFunction f = new GlobalFunction();
           var userdata = f.GetProfileUser(ViewBag.UserId);
           var modelTopBar = new TopbarModel();
           modelTopBar.user = userdata;
        }
        @await Html.PartialAsync("_Admin_TopBar", modelTopBar)
        @{ 
            var modelLeftbar = new LeftSidebarModel();
            modelLeftbar.user = userdata;
        }
        @await Html.PartialAsync("_Admin_Left_Sidebar", modelLeftbar)
        <div class="page-wrapper">
            <div class="container-fluid">
                <div id="view-page">
                    @RenderBody()
                </div>
                @{
                    var modelRightbar = new RightSidebarModel();
                    modelRightbar.user = userdata;
                }
                @await Html.PartialAsync("_Admin_Right_Sidebar", modelRightbar)
            </div>
        </div>

        @await Html.PartialAsync("_Admin_Footer", null)
    </div>
</body>
</html>
